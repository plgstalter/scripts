if [ -f `date "+%d_%m"`.md ]; then
	echo "le fichier existe dÃ©jÃ "
else
	echo "---" 		 > `date "+%d_%m"`.md 
	cat info.txt 		>> `date "+%d_%m"`.md
	x=`date "+%Y_%m_%d"`
	y=`cat language.txt`
	echo "date: "`python ../nice_date.py $x $y`  >> `date "+%d_%m"`.md
